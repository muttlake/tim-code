@{
    ViewData["Title"] = "Customer Page";
}

@model PizzaStore.MVC.Models.CustomerViewModel

<header class="col-md-12">
    <h3>Log in</h3>
    <h2>@ViewBag.CustomerNameProblem</h2>
</header>
<div class="col-md-12">
    <form asp-controller="Customer" method="post">
        <h4>Customer Name</h4>
        <div class="form-group">
            <label>Name: </label>
            <input asp-for="CustomerName" />
        </div>
        <button type="submit">Choose an Order Location</button>
    </form>
</div>


